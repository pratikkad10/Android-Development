<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:text="Choose your favourite" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/tvProglang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="your favourite programming language?" />

        <Button
            android:id="@+id/progLangbutn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Options" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/tvGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="your favourite branch in engineering?   " />

        <Button
            android:id="@+id/gameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Options" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/tvPerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="are you sure to exit?" />

        <Button
            android:id="@+id/permissionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Options" />

    </LinearLayout>


        <Button
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_marginVertical="90dp"
            android:layout_gravity="center"
            android:id="@+id/exitBtn"
            android:layout_height="wrap_content"
            android:text="Exit"/>





</LinearLayout>