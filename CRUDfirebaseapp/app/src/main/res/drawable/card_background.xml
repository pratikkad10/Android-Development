<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Deep green with reduced opacity -->
    <solid android:color="#B32e7d32" /> <!-- B3 = ~70% opacity -->

    <!-- Optional white stroke -->
    <stroke
        android:width="1dp"
        android:color="#80ffffff" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />
</shape>
