<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Info"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search any vehicle number"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Search Section -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@android:color/white"
        app:hintTextColor="@color/white"

        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/inputVehicleNumber"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/white_border"
            android:textColorHint="@color/white"
            android:hint="@string/enter_vehicle_number"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Button -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textColor="@color/green"
        android:backgroundTint="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="8dp"
        android:layout_marginHorizontal="20dp"
        android:elevation="4dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
    android:padding="24dp"
    android:layout_marginTop="40dp"
    android:layout_marginHorizontal="20dp"
    android:elevation="6dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- OWNER NAME -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Owner Name:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/ownerNameField"
            android:text="John Doe"
            android:textSize="16sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- OWNER CONTACT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Vehicle Brand:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="BMW"
            android:id="@+id/vehicleBrandField"
            android:textSize="16sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- VEHICLE NUMBER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Vehicle RTO:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleRTOFeild"
            android:text="Maharashtra"
            android:textSize="16sp"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>



    </LinearLayout>